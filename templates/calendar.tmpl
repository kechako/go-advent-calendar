<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <link href="/css/calendar.css" rel="stylesheet" />
    <title>{{.Name}} {{.Year}}</title>
  </head>
  <body>
    <h1>{{.Name}} {{.Year}}</h1>
    <article>
      <table class="calendar">
        <thead>
          <th>Sun</th>
          <th>Mon</th>
          <th>Tue</th>
          <th>Wed</th>
          <th>Thu</th>
          <th>Fri</th>
          <th>Sat</th>
        </thead>
        <tbody>
          {{range .Weeks}}
            <tr>
              {{range .Days}}
                <td>
                  {{if gt .Day 0 -}}
                    {{- if .Entry -}}
                      <p><a href="/{{$.Year}}/entries/{{.Day}}">{{.Day}}</a>
                      {{- if and .Entry.Title .Entry.Url -}}
                        {{- if .Date.Before $.Now -}}
                          <a href="{{.Entry.Url}}">{{.Entry.Title}}</a>
                        {{- else -}}
                          {{.Entry.Title}}
                        {{- end -}}
                      {{- end -}}
                      </p>
                      {{- if .Entry.Author -}}
                        <p>{{.Entry.Author -}}
                        {{- if .Entry.Section -}}
                          ({{.Entry.Section}})
                        {{- end -}}
                        </p>
                      {{- end -}}
                    {{- else }}
                      <p>{{.Day}} <a href="/{{$.Year}}/entries/{{.Day}}">New Entry</a></p>
                    {{- end }}
                  {{- else -}}
                    &nbsp;
                  {{- end}}
                </td>
              {{end}}
            </tr>
          {{end}}
        </tbody>
      </table>
    </article>
  </body>
</html>

